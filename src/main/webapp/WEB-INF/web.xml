<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  <display-name>Archetype Created Web Application</display-name>
  <filter>
  	<filter-name>AuthentificationFilter</filter-name>
  	<display-name>AuthentificationFilter</display-name>
  	<description></description>
  	<filter-class>by.epamlab.authentification.AuthentificationFilter</filter-class>
  </filter>
  <filter-mapping>
  	<filter-name>AuthentificationFilter</filter-name>
  	<url-pattern>/WelcomPage</url-pattern>
  </filter-mapping>
  
  <servlet>
  	<servlet-name>WelcomPage</servlet-name>
  	<display-name>WelcomPage</display-name>
  	<description></description>
  	<servlet-class>by.epamlab.servlet.WelcomPage</servlet-class>
  	
  </servlet>
  <servlet>
  	<servlet-name>Logout</servlet-name>
  	<display-name>Logout</display-name>
  	<description></description>
  	<servlet-class>by.epamlab.servlet.Logout</servlet-class>
  </servlet>
  
  <servlet-mapping>
  	<servlet-name>WelcomPage</servlet-name>
  	<url-pattern>/WelcomPage</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>Logout</servlet-name>
  	<url-pattern>/Logout</url-pattern>
  </servlet-mapping>
  <welcome-file-list>
	
		<welcome-file>WelcomPage</welcome-file>
		
	</welcome-file-list>
</web-app>
